import java.time.*;

// ----------------------------------------------------------------------------------------------------------------
//  ****************** Global Variables ******************
// ----------------------------------------------------------------------------------------------------------------

public Calendar calendar;

// Month of The Calendar
public Month month = Month.APRIL;


// ----------------------------------------------------------------------------------------------------------------
//  ****************** Setup && Draw ******************
// ----------------------------------------------------------------------------------------------------------------

public void setup() {
  size(1000, 1000);
  surface.setResizable(true);
  frameRate(144);
  background(244);
  calendar = new Calendar(month);
}

public void draw() {
  calendar.show();
  calendar.setTileSize();
}